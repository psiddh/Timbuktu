<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@android:color/background_dark" >

    <fragment android:name="app.com.timbuktu.map_fragmentview"
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="mapFragment"
        tools:layout="@layout/map_fragmentview" />

    <fragment
        android:id="@+id/sliderFragment"
        android:tag="sliderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="app.com.timbuktu.slider_fragmentview" >
    </fragment>

</RelativeLayout>